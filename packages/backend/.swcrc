{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": false
    },
    "target": "es2020",
    "keepClassNames": true,
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@types/*": ["src/types/*"],
      "@graphql/*": ["src/graphql/*"]
    }
  },
  "module": {
    "type": "commonjs",
    "noInterop": true
  },
  "sourceMaps": true
}
