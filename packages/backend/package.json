{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm swc ./src -s -d ./dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "pnpm lint:backend && pnpm lint:db",
    "lint:backend": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "fmt": "prettier --config ./.prettierrc  --list-different \"src/**/*.{js,json,ts,md}\"",
    "fmt:fix": "yarn fmt --write",
    "lint:db": "prisma validate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r tsx/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "graphql-build": "cd ../graphql && pnpm build ",
    "graphql-codegen": "pnpm graphql-build && tsx ./scripts/generate-typings.ts",
    "postinstall": "pnpm graphql-codegen",
    "type-check": "pnpm tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "^4.9.2",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/platform-express": "^10.2.7",
    "@prisma/client": "^5.5.2",
    "graphql": "^16.8.1",
    "prisma": "^5.5.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@mermaid-js/mermaid-cli": "^10.5.1",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/graphql": "12.0.9",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@swc/jest": "^0.2.29",
    "@types/express": "^4.17.20",
    "@types/jest": "29.5.6",
    "@types/node": "20.8.9",
    "@types/supertest": "^2.0.15",
    "@types/yargs": "^17.0.29",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "jest": "29.7.0",
    "prettier": "^3.0.3",
    "prisma-erd-generator": "^1.11.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.5.0",
    "ts-morph": "^20.0.0",
    "tsconfig-paths": "4.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "yargs": "^17.7.2"
  }
}
