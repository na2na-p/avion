{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "pnpm swc ./src -s -d ./dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "pnpm lint:backend && pnpm lint:db",
    "lint:backend": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:db": "prisma validate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "graphql-build": "cd ../graphql && pnpm build ",
    "graphql-codegen": "pnpm graphql-build && ts-node ./scripts/generate-typings.ts",
    "postinstall": "pnpm graphql-codegen",
    "type-check": "pnpm tsc --noEmit"
  },
  "dependencies": {
    "@apollo/server": "^4.7.4",
    "@nestjs/apollo": "^12.0.3",
    "@nestjs/common": "^9.4.3",
    "@nestjs/core": "^9.4.3",
    "@nestjs/graphql": "^12.0.3",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/platform-express": "^9.4.3",
    "@prisma/client": "^4.16.1",
    "graphql": "^16.7.1",
    "prisma": "^4.16.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@mermaid-js/mermaid-cli": "^10.2.2",
    "@nestjs/cli": "^10.0.3",
    "@nestjs/graphql": "12.0.3",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^9.4.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.66",
    "@swc/jest": "^0.2.26",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.2",
    "@types/node": "18.16.18",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.8",
    "prisma-erd-generator": "^1.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.3",
    "ts-morph": "^18.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.3",
    "yargs": "^17.7.2"
  }
}
